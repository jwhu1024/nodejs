    <meta charset="utf-8">
    <title>Sign in &middot; Twitter Bootstrap</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="">
    <meta name="author" content="">

    <!-- Le styles -->
    <style type="text/css">
      body {
        padding-top: 40px;
        padding-bottom: 40px;
        background-color: #f5f5f5;
      }

      .form-signin {
        max-width: 300px;
        padding: 19px 29px 29px;
        margin: 0 auto 20px;
        background-color: #fff;
        border: 1px solid #e5e5e5;
        -webkit-border-radius: 5px;
           -moz-border-radius: 5px;
                border-radius: 5px;
        -webkit-box-shadow: 0 1px 2px rgba(0,0,0,.05);
           -moz-box-shadow: 0 1px 2px rgba(0,0,0,.05);
                box-shadow: 0 1px 2px rgba(0,0,0,.05);
      }
      .form-signin .form-signin-heading,
      .form-signin .checkbox {
        margin-bottom: 10px;
      }
      .form-signin input[type="text"],
      .form-signin input[type="password"] {
        font-size: 16px;
        height: auto;
        margin-bottom: 15px;
        padding: 7px 9px;
      }
    </style>
  </head>

  <body>
    <div class="container">
      <form action="" class="form-signin">
        <h2 class="form-signin-heading">Please sign in</h2>
        <input id="user" type="text" class="input-block-level" placeholder="User" autofocus>
        <input id="pwd" type="Password" class="input-block-level" placeholder="Password">
        <label class="checkbox">
        </label>
        <button id="signinbtn" class="btn btn-large btn-primary" type="submit">Sign in</button>
      </form>
    </div> <!-- /container -->

    <script>
       $(function() {
        var cacheable = false;
        var $user  = $("#user"),
            $pwd   = $("#pwd");

        $("#signinbtn").click(function() {
          $.ajax({
            type : "POST",
            //data: { username: "admin", password: "admin" },
            data: { username: $user.val(), password: $pwd.val() },
            url : "/login",
            success : function(data) {
              if (data !== "/") {
                alert("Please login with correct account");
              } else {
              window.location = data;
              }
            }, 
            error : function() {
              alert("error");
            },
            cache: cacheable
          });
          return false;
        });
      });
    </script>
  </body>
