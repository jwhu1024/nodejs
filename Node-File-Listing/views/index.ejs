	<!-- jquery treeview setting (http://www.dynamicdrive.com/dynamicindex1/treeview/) -->
	<script type="text/javascript">
		$(function() {
			$("#navigation").treeview({
				collapsed   : true, 							//是否預先打開
				animated    : "fast", 						//動畫使用
				control     : "#sidetreecontrol", //將 打開/折合事件綁定至該 div
				persist     : "cookie",
				cookieId    : "navigationtree",
				unique      : true 								//打開某選項，關閉其他選項
			});
		});
	</script>
